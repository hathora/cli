{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*"]
}
